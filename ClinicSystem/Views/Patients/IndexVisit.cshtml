@model ClinicSystem.Models.SpecialistViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Visit Index</h2>

<form asp-controller="Patients" asp-action="IndexVisit" method="get">
    <p>
        <select asp-for="PatientSpecialist" asp-items="Model.Specialists">
            <option value="">All</option>
        </select>

        Please insert specialist's last name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].SFName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].SLName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].Specialist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].Complaint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].Diagnosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visits[0].PatientId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Visits)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SFName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complaint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                <a asp-action="EditVisit" asp-route-id="@item.VisitId">Edit</a> |
                <a asp-action="DetailsVisit" asp-route-id="@item.VisitId">Details</a> |
                <a asp-action="DeleteVisit" asp-route-id="@item.VisitId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>